.tabs-container {
  margin-bottom: 15px;
}

.tab {
  background-color: transparent;
  border: none;
  font-size: 16px;
  font-weight: 400;
  opacity: 0.6;
  color: black;
  min-width: auto;
  padding: 16px 14px;
  cursor: pointer;
  outline: none;

  &-active {
    font-weight: 600;
    opacity: 1;
    border-bottom: 2px solid black;
  }

  &:hover {
    opacity: 1;
  }
}
