.table {
  width: 100%;
  border-collapse: collapse;

  th, td {
    padding: 16px 24px;
    font-size: 16px;
    line-height: 24px;
    color: #191919;
    text-align: justify;
  }

  .table-header {
    background: #f6efff;
  }

  .table-body {
    tr {
      border-bottom: 1px #B5C1CF solid;
    }
  }
}